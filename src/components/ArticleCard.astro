---
const { title, description, date, author, slug, image } = Astro.props;
const defaultImage = '/images/blog/default-thumbnail.jpeg'; // Pastikan Anda memiliki gambar default
---

<article
  class="bg-white shadow-md rounded-lg overflow-hidden transition-transform duration-300 hover:scale-105"
>
  <a href={`/blog/${slug}`} class="block">
    <img src={image || defaultImage} alt={title} class="w-full h-48 object-cover" loading="lazy" />
  </a>
  <div class="p-6">
    <h2 class="text-xl font-semibold mb-2">
      <a href={`/blog/${slug}`} class="text-gray-900 hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h2>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex justify-between items-center text-sm text-gray-500">
      <span>{author}</span>
      <time datetime={date}>{new Date(date).toLocaleDateString()}</time>
    </div>
    <a href={`/blog/${slug}`} class="mt-4 inline-block text-blue-600 hover:underline">Read more</a>
  </div>
</article>
