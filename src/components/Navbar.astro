---

---

<nav class="py-4 w-full mx-auto bg-transparent" x-data="{ isOpen: false }">
    <div class="max-w-7xl mx-auto px-3">
      <div class="flex justify-between">
        <div class="flex space-x-7 justify-between w-full">
          <div>
            <!-- Website Logo -->
            <a href="/" class="flex items-center py-4 px-2">
              <img src="/logomark-ds.svg" alt="Logo" class="h-10 w-10 mr-2" />
              <span class="font-semibold font-sora text-gray-50 text-xl sm:text-2xl">Dripsender</span>
            </a>
          </div>
  
          <!-- Primary Navbar items -->
          <div class="hidden md:flex items-center space-x-1 gap-8">
            <a
              href="/"
              class="py-4 px-2 text-gray-200 font-semibold hover:text-cyan-500 dark:hover:text-cyan-400 transition duration-300"
              >Home</a
            >
            <a
              href="/pricing"
              class="py-4 px-2 text-gray-200 font-semibold hover:text-cyan-500 dark:hover:text-cyan-400 transition duration-300"
              >Pricing</a
            >
            <a
              href="/blog"
              class="py-4 px-2 text-gray-200 font-semibold hover:text-cyan-500 dark:hover:text-cyan-400 transition duration-300"
              >Blog</a
            >
            <a
              href="/docs"
              class="py-4 px-2 text-gray-200 font-semibold hover:text-cyan-500 dark:hover:text-cyan-400 transition duration-300"
              >Docs</a
            >
          </div>
  
          <!-- Secondary Navbar items -->
          <div class="hidden md:flex items-center space-x-3">

            <a
              href="/signup"
              class="py-2 px-3.5 text-base text-white bg-cyan-500 rounded hover:bg-cyan-400 transition duration-300"
              >Login -> </a
            >
          </div>
        </div>
        <!-- Mobile menu button -->
        <div class="md:hidden flex items-center">
          <button class="outline-none mobile-menu-button" @click="isOpen = !isOpen">
            <svg
              class="w-6 h-6 text-gray-50 hover:text-cyan-500"
              x-show="!isOpen"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg
              class="w-6 h-6 text-gray-200 hover:text-cyan-500"
              x-show="isOpen"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <!-- Mobile Menu -->
    <div
      class="md:hidden"
      x-show="isOpen"
      x-transition:enter="transition ease-out duration-100 transform"
      x-transition:enter-start="opacity-0 scale-95"
      x-transition:enter-end="opacity-100 scale-100"
      x-transition:leave="transition ease-in duration-75 transform"
      x-transition:leave-start="opacity-100 scale-100"
      x-transition:leave-end="opacity-0 scale-95"
    >
      <a
        href="/"
        class="block py-2 px-4 text-gray-50 text-sm hover:bg-cyan-500 hover:text-white transition duration-300"
        >Home</a
      >
      <a
        href="/pricing"
        class="block py-2 px-4 text-gray-50 text-sm hover:bg-cyan-500 hover:text-white transition duration-300"
        >Pricing</a
      >
      <a
        href="/blog"
        class="block py-2 px-4 text-gray-50 text-sm hover:bg-cyan-500 hover:text-white transition duration-300"
        >Blog</a
      >
      <a
        href="/docs"
        class="block py-2 px-4 text-gray-50 text-sm hover:bg-cyan-500 hover:text-white transition duration-300"
        >Docs</a
      >
      <a
        href="/signup"
        class="block py-2 px-4 text-gray-50 text-sm hover:bg-cyan-500 hover:text-white transition duration-300"
        >Sign Up</a
      >
    </div>
  </nav>
  