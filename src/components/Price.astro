  <script>
    // Pricing toggle functionality
    const monthlyBtn = document.getElementById('monthly-btn');
    const yearlyBtn = document.getElementById('yearly-btn');
    let isYearly = false;

    const pricingData = [
      { monthly: '99k', yearly: '799k', monthlySavings: '', yearlySavings: 'Hemat Rp389.000' },
      { monthly: '199k', yearly: '1.999k', monthlySavings: '', yearlySavings: 'Hemat Rp389.000' },
      { monthly: '299k', yearly: '2.999k', monthlySavings: '', yearlySavings: 'Hemat Rp589.000' }
    ];

    function updatePricing() {
      pricingData.forEach((data, index) => {
        const priceEl = document.getElementById(`price-${index + 1}`);
        const periodEl = document.getElementById(`period-${index + 1}`);
        const savingsEl = document.getElementById(`savings-${index + 1}`);

        if (isYearly) {
          priceEl.textContent = data.yearly;
          periodEl.textContent = '/tahun';
          savingsEl.textContent = data.yearlySavings;
          savingsEl.classList.add('text-green-600', 'dark:text-green-400', 'font-semibold');
        } else {
          priceEl.textContent = data.monthly;
          periodEl.textContent = '/bulan';
          savingsEl.textContent = data.monthlySavings;
          savingsEl.classList.remove('text-green-600', 'dark:text-green-400', 'font-semibold');
        }
      });
    }

    function toggleButtons() {
      if (isYearly) {
        monthlyBtn.classList.remove('bg-cyan-500', 'text-white', 'shadow-md');
        monthlyBtn.classList.add('text-gray-700', 'dark:text-gray-300');
        yearlyBtn.classList.add('bg-cyan-500', 'text-white', 'shadow-md');
        yearlyBtn.classList.remove('text-gray-700', 'dark:text-gray-300');
      } else {
        yearlyBtn.classList.remove('bg-cyan-500', 'text-white', 'shadow-md');
        yearlyBtn.classList.add('text-gray-700', 'dark:text-gray-300');
        monthlyBtn.classList.add('bg-cyan-500', 'text-white', 'shadow-md');
        monthlyBtn.classList.remove('text-gray-700', 'dark:text-gray-300');
      }
    }

    monthlyBtn.addEventListener('click', () => {
      if (isYearly) {
        isYearly = false;
        updatePricing();
        toggleButtons();
      }
    });

    yearlyBtn.addEventListener('click', () => {
      if (!isYearly) {
        isYearly = true;
        updatePricing();
        toggleButtons();
      }
    });
  </script>