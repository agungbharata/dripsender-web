---
import { getCollection } from "astro:content";
import DocsLayout from "../../layouts/DocsLayout.astro";

const allDocs = await getCollection("docs");
// Cari dokumen default
const defaultDoc = allDocs.find((doc) => doc.data.isDefault === true) || allDocs[0];
const { Content } = await defaultDoc.render();
---

<DocsLayout frontmatter={defaultDoc.data} slug={defaultDoc.slug}>
  <Content />
</DocsLayout>
