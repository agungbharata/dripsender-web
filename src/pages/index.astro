---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Feature from "../components/Feature.astro";
import FeatureListBuilding from "../components/FeatureListBuilding.astro";
import FeatureCampaign from "../components/FeatureCampaign.astro";
import FeatureAutomation from "../components/FeatureAutomation.astro";
import FeatureChatGPT from "../components/FeatureChatGPT.astro";
import CTA from "../components/CTA.astro";
import HeroDark from "../components/HeroDark.astro";
import TestimonialSlider from "../components/TestimoniSlider";
import Solution from "../components/Solution";

const posts = await getCollection("blog");
posts.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
---

<Layout title="Homepage">
  <HeroDark />
  <Feature />
  <TestimonialSlider client:load />

  <FeatureListBuilding />
  <FeatureCampaign />
  <FeatureAutomation />
  <FeatureChatGPT />
  <CTA />
  <!-- <ChatConversation client:load /> -->

  <Solution client:load />
</Layout>
